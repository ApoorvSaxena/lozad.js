{
  "name": "lozad",
  "title": "lozad.js",
  "description": "A light-weight JS library to lazy load any HTML element such as images, ads, videos etc.",
  "version": "1.0.4",
  "homepage": "https://github.com/ApoorvSaxena/lozad.js",
  "scripts": {
    "test": "nyc mocha",
    "build": "node build.js",
    "prepublish": "npm run build",
    "prelint": "prettier --single-quote --no-semi --no-bracket-spacing --trailing-comma none --write \"lib/**/*.js\" --write build.js --write",
    "precommit": "npm run lint",
    "lint": "xo --fix src/*.js build.js"
  },
  "author": {
    "name": "Apoorv Saxena",
    "email": "root@apoorv.pro",
    "url": "https://apoorv.pro"
  },
  "main": "dist/lozad.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/ApoorvSaxena/lozad.js.git"
  },
  "bugs": {
    "url": "https://github.com/ApoorvSaxena/lozad.js/issues"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/ApoorvSaxena/lozad.js/blob/master/LICENSE"
    }
  ],
  "files": [
    "dist/"
  ],
  "keywords": [
    "lazy",
    "loader",
    "lazyloader",
    "lazyload",
    "performance",
    "image",
    "video",
    "iframe",
    "ads"
  ],
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-0": "^6.24.1",
    "jsdom": "^11.2.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^3.5.1",
    "nyc": "^11.2.1",
    "husky": "^0.14.3",
    "prettier": "^1.6.1",
    "rollup": "^0.49.2",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-filesize": "^1.4.2",
    "rollup-plugin-license": "^0.5.0",
    "rollup-plugin-uglify": "^2.0.1",
    "xo": "^0.18.2"
  },
  "xo": {
    "envs": [
      "browser"
    ],
    "semicolon": false,
    "space": true
  }
}
